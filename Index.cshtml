@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>
<table>
    <tr>
        <td>Name :</td>
        <td><input type="text" id="txtname" /></td>
    </tr>

     <tr>
        <td>Country :</td>
        <td>
            <select id="ddlcountry">
                <option value="0">--Select--</option>
            </select>
        </td>
    </tr>

     <tr>
        <td></td>
        <td><input type="button" id="btnsave" value="Save" onclick="return Validation()" /></td>
    </tr>
</table>

<table id="tbl" border="1">
    <tr>
       <th>EmpID</th> <th>Employee Name</th> <th>Employee Country</th> <td></td>  <th></th>
    </tr>
</table>


<script src="~/jquery.min.js"></script>
<script type="text/javascript">
    function Validation() {
        var dabba = "";
        dabba = checkname();
        dabba += checkcountry();

        if (dabba != "") {
            alert(dabba);
            return false;
        }

        else {
            SaveData();
        }
    }

    function checkname() {
        var TB = $("#txtname").val();
        if (TB == "") {
            return 'please enter your name !!\n'
        }
        else {
            return "";
        }
    }

    function checkcountry() {
        var TB = $("#ddlcountry").val();
        if (TB == "0") {
            return 'please select your country !!\n'
        }
        else {
            return "";
        }
    }



//----------------------------------------------------------
    $(document).ready(function () {
        BindCountry();
        BindEmp();
    });

    function Clear() {
        $("#txtname").val("");
        $("#ddlcountry").val("0");
        $("#btnsave").val("Save");
        DD = 0;
    }

    function BindCountry() {
        $.ajax({
            url: 'Home/GetCountry',
            type: 'post',
            data: {},
            success: function (data) {
                for (var i = 0; i < data.length; i++) {
                    $("#ddlcountry").append($('<option/>').attr("value",data[i].cid).text(data[i].cname));
                }
            },
            error: function () {
                alert('Country not found !!');
            }
        });
    }


    function SaveData() {
        $.ajax({
            url: 'Home/InsertUpdate',
            type: 'post',
            data: {empid: DD, name : $("#txtname").val(), countryid : $("#ddlcountry").val()},
            success: function () {
                BindEmp();
                Clear();
            },
            error: function () {
                alert('Record not Saved !!');
            }
        });
    }


    function BindEmp() {
        $.ajax({
            url: 'Home/GetEmp',
            type: 'post',
            data: {},
            success: function (data) {
                $("#tbl").find("tr:gt(0)").remove();
                for (var i = 0; i < data.length; i++) {
                    $("#tbl").append('<tr> <td>' + data[i].empid + '</td>  <td>' + data[i].name + '</td>  <td>' + data[i].cname + '</td>  <td><input type="button" id="btndelete" value="Delete" onclick="DeleteData(' + data[i].empid + ')" /></td>  <td><input type="button" id="btnedit" value="Edit" onclick="EditData(' + data[i].empid + ')" /></td> </tr>');
                }
            },
            error: function () {
                alert('Emp not found !!');
            }
        });
    }

    function DeleteData(empid) {
        $.ajax({
            url: 'Home/Delete',
            type: 'post',
            data: { empid: empid },
            success: function () {
                BindEmp();
                Clear();
            },
            error: function () {
                alert('Record not Deleted !!');
            }
        });
    }

    var DD = 0;
    function EditData(empid) {
        $.ajax({
            url: 'Home/Edit',
            type: 'post',
            data: { empid: empid },
            success: function (data) {
                $("#txtname").val(data[0].name);
                $("#ddlcountry").val(data[0].countryid);
                $("#btnsave").val("Update");
                DD = empid;
            },
            error: function () {
                alert('Record not Edited !!');
            }
        });
    }

</script>


